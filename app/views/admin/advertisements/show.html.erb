    <% if @advertisement.advertisable_type == "Product" %>
      <%= simple_form_for Product.find(@advertisable.id), url: toggle_product_verify_path(@advertisable.id), remote: true, html: {"data-verify-target": "form"} do |f| %>
        <% if @advertisable.verified  %>
          <%= f.input :verified, label: "Cancelar Certificação", :as => :boolean, input_html: {"data-verify-target": "input", "data-action": "change->verify#submit"}%>
        <% else %>
          <%= f.input :verified, label: "Certificar Produto", :as => :boolean, input_html: {"data-verify-target": "input", "data-action": "change->verify#submit"}%>
        <% end %>
        <%= f.input :id, value: @advertisable.id, :as => :hidden %>
      <% end %>
    <% elsif @advertisable.instance_of? Bike %>
      <%= simple_form_for @advertisable, url: toggle_bike_verify_path(@advertisable.id), remote: true, html: {"data-verify-target": "form"} do |f| %>
        <% if @advertisable.verified  %>
          <%= f.input :verified, label: "Cancelar Certificação", :as => :boolean, input_html: {"data-verify-target": "input", "data-action": "change->verify#submit"}%>
        <% else %>
          <%= f.input :verified, label: "Certificar Bike", :as => :boolean, input_html: {"data-verify-target": "input", "data-action": "change->verify#submit"}%>
        <% end %>
        <%= f.input :id, value: @advertisable.id, :as => :hidden %>
      <% end %>
    <% end %>
