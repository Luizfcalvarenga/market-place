<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    width: 90%;
    /* margin: 0 auto; */
    margin-top: 10px;
    border: 1px solid #00c454;
    border-radius: 50px;
    box-shadow: 5px 8px 12px #e0e0e0;
    align-items: center;
    margin: 20px auto;
    box-shadow: 0 0 20px rgba(0,0,0,0.3);
    border-radius: 10px;
    padding-bottom: 20px;
    background: #101010;
  }

  h6 {
    font-size: 12;
    font-weight: lighter;
    color: white;
    text-align: center;
    margin-bottom: 0;
    margin-top: 40px;
  }

  .header {
    background-color: #00c454;
    color: white !important;
    padding: 5px;
    text-align: center;
    border-radius: 10px 10px 0 0;
  }

  .mail-content {
    padding: 0 20px;
  }
  p {
    color: white;
  }

  .item-name, h2 {
    color: #00c454;
  }

  .detail-info {
    color: #00c454;
    font-size: 12px;
  }

  .btn-invoice {
    background-color: transparent;
    border-radius: 4px;
    color: #00c454;
    cursor: pointer;
    display: inline-block;
    padding: 7px 20px;
    text-align: center;
    text-decoration: none;
    transition: all 250ms;
    border: 1px solid #00c454;
    font-size: 16px;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
  }

  .btn-invoice:hover {
    box-shadow: 0px 0px 20px 0px #00c4545e;
  }

  .social-icon {
    width: 25px;
    height: 25px;
    filter: invert(46%) sepia(99%) saturate(1234%) hue-rotate(110deg) brightness(97%) contrast(102%);
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  .social-icon:hover {
    filter: invert(46%) sepia(117%) saturate(1261%) hue-rotate(128deg) brightness(100%) contrast(102%);

  }

 .social-icon-face {
    width: 22px;
    height: 22px;
    filter: invert(46%) sepia(99%) saturate(1234%) hue-rotate(110deg) brightness(97%) contrast(102%);
  }

  .social-icon-face:hover {
    filter: invert(46%) sepia(117%) saturate(1261%) hue-rotate(128deg) brightness(100%) contrast(102%);
  }

  .footer {
    text-align: center;
  }

  .footer-icon {
    width: 22px;
    height: 22px;
  }

  .footer-brand {
    margin-top: 10px;
  }

  .footer-line {
    border: 0.1px solid #00c454;
    width: 30%;
    height: 0.2px;
  }

  .invoice-link {
    text-align: center;
    margin: 0 !important;
  }
</style>

<body>
  <div class="header">
    <% if @client.full_name.present? %>
      <h3>Nova mensagem de <%= @client.full_name %></h3>
    <% else %>
      <h3>Nova mensagem de <%= @client.email %></h3>
    <% end %>
  </div>
  <div class="mail-content">
    <p>mensagem: <%= @message.content %></p>
    
    <a href="https://nuflowshop.herokuapp.com/user/<%= @client.id %>" target="_blank" class="btn-invoice">Responder</a>
  </div>
</body>
