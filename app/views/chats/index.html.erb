<%= turbo_frame_tag "appearance_channel" %>
<div id="appearance_channel"></div>
<div id="chatroom_container" class="row bg-dark text-light">
  <div id="side_panel" class="col-md-4 col-sm-4 border-right border-success">
    <li class="list-group-item d-flex align-items-center justify-content-between user_list_item user-info">
      <div class="icon-container  ms-3 mt-2">
        <%= link_to cl_image_tag(current_user.photo.key, class: 'chat_pfp'), current_user %>
        <%= turbo_stream_from "user_status" %>
        <div>
          <%= render "users/status", user: current_user %>
        </div>
      </div>
      <div class='ms-2 me-auto username'>
        <%= current_user.full_name || current_user.email %>
      </div>
    </li>
    <div class="d-flex">
      <%= form_with url: chats_path, method: :get, class: "d-flex me-2 ms-1" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-user-chat",
          placeholder: "ðŸ”Ž Pesquisar"
        %>

        <button type="submit" class="seach-user-btn mt-2 d-none">
          <i class="fas fa-search user-search-icon"></i>
        </button>
      <% end %>
    </div>
    <%= turbo_stream_from "users" %>
    <div id="users" data-controller="user-list">
      <%= render "users/users", users: @users %>
    </div>


    <%= turbo_stream_from "chats" %>

  </div>

  <div id="chat_container"
  class="col-md-8 col-sm-8 bg-dark text-light">
    <% if @single_chat %>
      <div id="single_chat">
        <div class="d-flex justify-content-center py-2 user-conversation-info mb-1">
          <%= cl_image_tag(@user.photo.key, class: 'chat_pfp') %>
          <h4 class="text-center mt-2"> <%= @user&.full_name || @user&.email || @single_chat.name || @chat.name %> </h4>
        </div>
        <%= turbo_stream_from @single_chat %>
        <div id="messages" data-controller="scroll">
          <div id="messages-container">
            <%= render @messages %>
          </div>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
