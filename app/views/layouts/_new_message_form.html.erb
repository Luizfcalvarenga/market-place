<div class="input-group mt-5 msg-form" >
  <%= form_with(model: [@single_chat, @message], remote: true, clas: "d-flex", data: { controller: "reset-form", action: 'turbo:submit-end->reset-form#reset' }) do |f| %>
    <%= f.text_field :content, id: "chat-text", clas: "form-control msg-content", autocomplete: "off" %>
    <%= f.submit "Enviar", data: { disable_with: false }, class: "btn-msg" %>
  <% end %>
</div>
