    <style>
      <%= ".msg-#{current_user&.id}" %> {
        background-color: #101010 !important;
      padding: 10px;
      }
      <%= ".cont-#{current_user&.id}" %> {
        display: flex;
        justify-content: flex-end
      }
    </style>
