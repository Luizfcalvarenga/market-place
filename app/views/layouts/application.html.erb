    <% if current_user && current_user.access == "admin" %>
      <%= render 'shared/admin_navbar' %>
    <% elsif current_user &&  current_user.access != "admin" %>
      <%= render partial: "shared/navbar" %>
    <% elsif !current_user %>
      <%= render partial: "shared/navbar" %>
    <% end %>


    <%= render 'shared/flashes' %>

    <%= yield %>

    <%= render partial: "shared/footer" %>
