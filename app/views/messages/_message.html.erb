<div class="cont-<%=message.user.id%> msg-content">
  <div class="message-box msg-<%= message.user.id %>">
    <div class="d-flex align-items-center mb-1 user-infos">
      <%= cl_image_tag(message.user.photo.key, class:'chat_pfp') %>
      <div class="mb-3">
        <h6 class="name text-success"><small> <%= message.user.full_name.present? ? message.user.full_name : message.user.email %></small></h6>
        <p class="time text-white"><%= time_ago_in_words(message.created_at) %> atrÃ¡s</p>
      </div>
    </div>
    <div class="fs-20">
      <%= message.content %>
    </div>
    <%= render "messages/attachments", message: message %>
    <p class="d-none msg-time mt-2"> <%= message.created_at.to_s(:time) %> </p>
  </div>
</div>
