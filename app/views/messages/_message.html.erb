<div class="cont-<%=message.user.id%>">
  <div class="message-box msg-<%= message.user.id %>">
    <% unless message.chat.is_private %>
      <% if message.user.full_name.present? %>
        <h6 class="name text-success"> <small><%= message.user.full_name %></small>  </h6>
      <% else %>
        <h6 class="name text-success"> <small><%= message.user.email %></small>  </h6>
      <% end%>
    <% end %>
    <%= message.content %>
  </div>
</div>
