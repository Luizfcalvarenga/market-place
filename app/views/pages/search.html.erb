<div class="container py-3 <%= mobile_device? ? "w-90" : "w-80" %>">
  <p>Procurando por <span class="text-success"><%= params[:query] %></span></p>
  <% if @bikes.present? %>
    <div class="row row-cols-1">
      <h3 class="text-center text-success my-3">Bikes</h3>
      <% @bikes.each do | bike | %>
        <%= link_to bike_path(bike), class: "col-12 col-md-3" do %>
          <div class="cards-bikes-likes">
            <div id="carouselExampleControls <%=bike.id%>" class="carousel slide w-100" data-bs-ride="carousel">
              <% if bike.photos.attached? %>
                <div class="carousel-inner">
                  <% bike.photos.each_with_index do |photo, i| %>
                    <div class="show-carousel-item carousel-item <%= i.zero? ? "active" : ""  %>">
                      <%= cl_image_tag photo.key, crop: :fit, class: 'd-block card-img'  %>
                    </div>
                  <% end %>
                </div>
              <% else  %>
                  <%= image_tag "bike-forest.png", class: "card-img" %>
              <% end %>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls <%=bike.id%>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls <%=bike.id%>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="d-flex justify-content-center gap-2 mt-1">
              <h4 class="card-title text-center"><%= bike.frame_brand %></h4>
              <h4 class="card-title text-center"><%= bike.model %></h4>
            </div>
            <h4 class="text-center card-title mt-1">
              <%= number_to_currency(bike.price_in_cents / 100, unit: "R$", separator: ",", delimiter: ".") %>
            </h4>
            <hr class="index-line"/>
            <div class="card-content my-2">
              <div class="d-flex justify-content-around">
                <div class="infos">
                  <p><%= bike.locality %></p>
                  <p><%= bike.bike_type %></p>
                </div>
                <div class="infos">
                  <p><i class="far fa-heart"></i></p>
                  <% if bike.bike_type == 'bike' %>
                    <%= image_tag "normal-bike.png", class: "icon-card-index"%>
                  <% else %>
                    <%= image_tag "e-bike.png", class: "icon-card-index"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <li class="text-center mt-0 w-100">
      <h5>Não encontramos nada para bikes.</h5>
    </li>
  <% end %>

  <% if @products.present? %>
    <div class="row row-cols-1">
      <h3 class="text-center text-success my-3">Produtos</h3>
      <% @products.each do | product | %>
        <%= link_to product_path(product), class: "col-12 col-md-3" do %>
          <div class="cards-products-likes">
            <div id="carouselExampleControls <%=product.id%>" class="carousel slide w-100" data-bs-ride="carousel">
            <% if product.photos.attached? %>
              <div class="carousel-inner">
                <% product.photos.each_with_index do |photo, i| %>
                  <div class="show-carousel-item carousel-item <%= i.zero? ? "active" : ""  %>">
                    <%= cl_image_tag photo.key, crop: :fit, class: 'd-block card-img'  %>
                  </div>
                <% end %>
              </div>
            <% else  %>
                <%= image_tag "bike-forest.png", class: "card-img" %>
            <% end %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls <%=product.id%>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls <%=product.id%>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
            <div class="d-flex justify-content-center gap-2 mt-1">
              <h4 class="card-title text-center"><%= product.brand %></h4>
              <h4 class="card-title text-center"><%= product.model %></h4>
            </div>
            <h4 class="text-center card-title mt-1">
              <%= number_to_currency(product.price_in_cents / 100, unit: "R$", separator: ",", delimiter: ".") %>
            </h4>
            <hr class="index-line"/>
            <div class="card-content my-2">
              <div class="d-flex justify-content-around">
                <div class="infos">
                  <p><%= product.locality %></p>
                  <p><%= product.product_type.name %></p>
                </div>
                <div class="infos">
                  <p><i class="far fa-heart"></i></p>
                  <% if  ["car_accessories", "bike_accessories", "training_accessories", "pre_after_pedal_accessories"].include?(product.product_type.name) %>
                    <%= image_tag "accessories.png", class: "icon-card-index"%>
                  <% elsif  ["battery", "brake", "brake_levers", "cassete","chain", "chainring", "crankset", "fender", "frame", "front_derailleur", "front_shifter", "front_suspension", "full_wheel", "grips", "handlebar", "headset", "hub", "pedals", "rim", "saddle", "seat_post", "spoke", "rear_derailleur", "rear_shifter", "rear_suspension", "stem", "tyre"].include?(product.product_type.name) %>
                    <%= image_tag "frame.png", class: "icon-card-index"%>
                  <% elsif  ["helmet", "elbow_pad", "knee_pad", "water_bottle", "bottle_cage", "hydration_backpack", "fanny_pack", "sneaker"].include?(product.product_type.name) %>
                    <%= image_tag "helmet.png", class: "icon-card-index"%>
                  <% elsif  ["cap", "glasses"].include?(product.product_type.name) %>
                    <%= image_tag "cap.png", class: "icon-card-index"%>
                  <% elsif  ["air_bomb", "lubricant", "sealant"].include?(product.product_type.name) %>
                    <%= image_tag "tools.png", class: "icon-card-index"%>
                  <% elsif  ["bretelle", "shorts", "inner_shorts", "shirt", "vest", "windbreaker", "thermal_clothing"].include?(product.product_type.name) %>
                    <%= image_tag "tshirt.png", class: "icon-card-index"%>

                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <li class="text-center mt-0 w-100">
        <h5>Não encontramos nada para produte.</h5>
      </li>
    <% end %>
  </div>
</div>
