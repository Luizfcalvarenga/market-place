<div data-search-target="list" class="results-list expandable w-100 mt-1">
  <ul class="search-list w-100">
    <% if @bikes.present? %>
      <h5 class="text-center mt-3">Bikes</h5>
      <% @bikes.first(5).each do | bike | %>
        <%= link_to bike_path(bike), class: "links" do %>
          <li class="d-flex justify-content-start search-list-item mt-2">
            <% if bike.photos.attached? %>
              <%= cl_image_tag bike.photos.first.key, class: "search-img my-2 mx-3" %>
            <% else %>
              <%= image_tag "new-announce-banner.jpg", class: "search-img my-2 mx-3" %>
            <% end %>
            <div class="my-auto mx-2">
              <p class="search-title"><span class="text-success me-1"> <%= bike.frame_brand %> </span> <%= bike.model %></p>
              <p class="search-list-details text-gray  mb-2">
                <%= number_to_currency(bike.price_in_cents / 100, unit: "R$", separator: ",", delimiter: ".", precision: 2) %>
                . <%= bike.city.name %>
                - <%= bike.state.acronym %>
                . <%= bike.category.name_display %>
                . <%= bike.modality_display %>
                . <%= bike.year %>
              </p>
            </div>
          </li>
        <% end %>
      <% end %>
      <% if @bikes.count > 5 %>
        <li class="text-center mt-0">
          <%= link_to search_path, class: "text-success btn-search-all" do %>
            Ver mais<i class="fas fa-angle-double-right"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>

    <% if @products.present? %>
      <h5 class="text-center mt-3">Produtos</h5>
      <% @products.first(5).each do | product | %>
        <%= link_to product_path(product), class: "links" do %>
          <li class="d-flex justify-content-start align-middle search-list-item mt-2">
            <% if product.photos.attached? %>
              <%= cl_image_tag product.photos.first.key, class: "search-img my-2 mx-3" %>
            <% else %>
              <%= image_tag "bike-components.png", class: "search-img my-2 mx-3" %>
            <% end %>
           <div class="my-auto mx-2">
              <p class="search-title"><%= product.product_type.prompt %><span class="text-success me-1"> <%= product.brand %> </span> <%= product.model %></p>
              <p class="search-list-details text-gray mb-2">
                <%= number_to_currency(product.price_in_cents / 100, unit: "R$", separator: ",", delimiter: ".", precision: 2) %>
                . <%= product.city.name %>
                - <%= product.state.acronym %>
                . <%= product.category.name_display %>
                . <%= product.modality_display %>
                . <%= product.year %>
              </p>
            </div>
          </li>
        <% end %>
      <% end %>
      <% if @products.count > 5 %>
        <li class="text-center mt-0">
          <%= link_to search_path, class: "text-success btn-search-all" do %>
            Ver mais<i class="fas fa-angle-double-right"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
